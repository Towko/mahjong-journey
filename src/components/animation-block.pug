section.animations 
    .container 
        .row.position-relative
            .d-flex.col-12.w-100.h-100.position-absolute.justify-content-between.align-items-start.clouds
                .d-flex.position-absolute.align-self-start.cloud1.wow.animate__slideInLeft(data-wow-duration="2s", data-wow-offset="500")
                    .parallax-inner: img.img-fluid(src="./img/cloud1.png", alt="cloud")
                .d-flex.position-absolute.align-self-start.align-self-sm-center.align-self-md-start.cloud2.wow.animate__slideInRight(data-wow-duration="2s", data-wow-offset="500")
                    .parallax-inner: img.img-fluid(src="./img/cloud2.png", alt="another cloud")
            .col-10.offset-1.col-md-8.offset-md-0.gif-block
                .d-flex.justify-content-center.align-items-center.my-md-3
                    img.img-fluid(src="./img/gif-plug.png", alt="gif-image")
            .col-12.col-md-4.info-block
                .d-flex.flex-column.justify-content-center.align-items-center.text-center.my-3.mb-sm-5
                    .animations-ico: img.img-fluid(src="./img/240x240-Mahjong.png", alt="icon")
                    h2.text-center.title Mahjong Journey
                    h4.text-center.description Experience a new take on Mahjong Solitaire
                    a.d-flex.justify-content-center.align-items-center.btn.btn-lg.btn-block.position-relative.mx-auto.my-md-2.my-lg-5.action-btn(href="http://", target="_blank", rel="noopener noreferrer")
                        img.position-absolute.w-100(src="./img/button.png", alt="button")
